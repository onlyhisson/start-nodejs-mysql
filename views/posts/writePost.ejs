<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">
                <small><%=pageTitle%><br>General<br> <span class="c-white">Table styles</span></small>
            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-menu"></i>
            </div>
            <div class="header-title">
                <h3><%=pageTitle%></h3>
                <small><%=subTitle%></small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                    <a class="panel-close"><i class="fa fa-times"></i></a>
                </div>
                <h4>Write Form</h4>
            </div>
            <div class="panel-body">

                <p>write post</p>


                <div class="row">
                    <div class="col-lg-12">

                        <form action="<%=routes.posts%><%=routes.writePost%>", method="post", enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" name="title" placeholder="Title input">
                            </div>

                            <div class="form-group">
                                <label>Sub Title</label>
                                <input type="text" class="form-control" name="subTitle" placeholder="Sub Title input">
                            </div>

                            <div class="form-group">
                                <label>Contents</label>
                                <textarea class="form-control" name="postContent" rows="3" placeholder="Content input"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Upload Image</label></br>
                                <label class="btn btn-default" for="postImage">
                                    <input id="postImage" name="postImage" type="file" style="display:none;"
                                            onchange="$('#upload-file-info2').html($(this).val());">
                                    <span id="upload-file-info2">Click Here</span>
                                </label>
                            </div>

                            <div class="form-group text-right">
                                <button type="submit" class="btn btn-accent" style="width: 100px;">Write</button>
                                <a href="<%=routes.posts%>" class="btn btn-default">Cancel</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>