<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <div class="view-header">
                <div class="pull-right text-right" style="line-height: 14px">
                    <small><%=pageTitle%><br>General<br> <span class="c-white">Table styles</span></small>
                </div>
                <div class="header-icon">
                    <i class="pe page-header-icon pe-7s-menu"></i>
                </div>
                <div class="header-title">
                    <h3><%=pageTitle%></h3>
                    <small><%=subTitle%></small>
                </div>
            </div>
            <hr>
        </div>
    </div>

    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-filled">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                        <a class="panel-close"><i class="fa fa-times"></i></a>
                    </div>
                    <h4>Data List</h4>
                </div>
                <div class="panel-body">

                    <a href="<%=routes.posts%><%=routes.writePost%>" class="btn btn-accent" style="width: 100px; margin-left: 15px; margin-bottom: 20px;">Write Form</a>

                    <table id="postDataTable1" class="table table-striped table-hover table-responsive-sm">
                        <thead class="text-center">
                            <tr>
                                <th>Title</th>
                                <th>Sub Title</th>
                                <th>Content</th>
                                <th>Created Date</th>
                                <th>Modified Date</th>
                                <th><i class="fa fa-commenting-o"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.forEach((el) => { %>
                            <tr>
                                <td><%=el.title%></td>
                                <td><%=el.subTitle%></td>
                                <td><%=el.postContent.substring(0, 20)%>...</td>
                                <td><%=moment(el.createdAt).format('YYYY-MM-DD hh:mm:ss') %></td>
                                <td><%=moment(el.modifiedAt).format('YYYY-MM-DD hh:mm:ss') %></td>
                                <td class="text-center"><a href="<%=routes.posts%>/<%=el.id%>">자세히 보기</a></td>
                            </tr>
                            <% })%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>