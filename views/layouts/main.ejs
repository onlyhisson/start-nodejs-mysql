<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%
        let flashMsg = {
            type: '',
            text: ''
        };
        if(messages.error) {
            flashMsg.type = 'error';
            flashMsg.text = messages.error;
        };
        if(messages.info) {
            flashMsg.type = 'info';
            flashMsg.text = messages.info;
        };
        if(messages.success) {
            flashMsg.type = 'success';
            flashMsg.text = messages.success;
        };
    %>
    <input id="showToastr" type="hidden" onClick='showToastr("<%=flashMsg.type%>", "<%=flashMsg.text%>")'>
    <!-- Wrapper-->
    <div class="wrapper">

        <!-- Header-->
        <%- include('../partials/top') %>
        <!-- End header-->

        <!-- Navigation-->
        <%- include('../partials/left') %>
        <!-- End navigation-->

        <!-- Main content-->
        <section class="content">
            <%- body %>
        </section>
        <!-- End main content-->
    </div>
    <!-- End wrapper-->

<%- include('../partials/footer') %>

<%- include('../partials/scripts-main') %>

</body>

</html>